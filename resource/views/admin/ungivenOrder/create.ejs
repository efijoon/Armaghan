<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>ایجاد دسته</h2>
</div>
<form class="form-horizontal" action="/admin/ungivenOrders/create" method="post">

    <%- include(viewPath('layouts/error-messages')) -%>

    <div class="form-group row">
        <div class="col">
            <label for="customer" class="control-label font-weight-bold">سفارش دهنده</label>
            <input type="text" class="form-control" name="customer" id="customer" placeholder="نام سفارش دهنده را وارد کنید" value="<%= old('customer') %>">
        </div>
    </div>

    <div class="form-group row">
        <div class="col">
            <label for="products" class="control-label font-weight-bold font-weight-bold">محصولات سفارش</label>
            <select name="products" id="products" class="form-control form-control-chosen" style="text-align: right;" multiple>
                <% products.forEach(p => { %>
                    <option value="<%= p.id %>"><%= p.name %></option>
                <% }) %>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col">
            <select name="productsCount" id="productsCount" class="form-control" style="text-align: right;" multiple hidden>
            </select>
        </div>
    </div>

    <div class="form-group row" style="justify-content: center;padding: 30px;border: 5px solid rgb(0, 121, 129);border-radius: 20px;">
        <div class="col-4 product-names-container">
            <label for="products-name">نام محصولات سفارش</label>
            <div class="product-names">
                
            </div>
        </div>
        <div class="col-2 product-counts-container">
            <label for="products-count">تعداد محصولات سفارش</label>
            <div class="product-counts">
                
            </div>
        </div>
    </div>

    <div class="form-group">
        <label for="address" class="control-label">محل ارسال</label>
        <input id="address" type="text" class="form-control" name="address" value="<%=  old('address') %>" required>
    </div>

    <div class="form-group">
        <label for="telephone" class="control-label">تلفن تماس پشتیبانی</label>
        <input id="telephone" type="text" class="form-control" name="telephone" value="<%=  old('telephone') %>" required>
    </div>

    <div class="form-group row">
        <div class="col">
            <button type="submit" class="btn btn-block btn-success mt-4" id="submit-btn">ارسال</button>
        </div>
    </div>
</form>

<link rel="stylesheet" href="/admin/css/component-chosen.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.6/chosen.jquery.min.js"></script>
<script>
    $('.form-control-chosen').chosen({rtl: true}); 
</script>
<style>
    .chosen-container {
        text-align: right;
    }
</style>
<script src="/admin/js/product-selector-controller.js"></script>
