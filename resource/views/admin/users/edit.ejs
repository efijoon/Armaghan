<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>ویرایش کاربر</h2>
</div>
<form class="form-horizontal" method="POST" action="/admin/users/<%= user.id %>" novalidate>

    <%- include(viewPath('layouts/error-messages')) -%>
    
    <div class="form-group">
        <label for="name" class="control-label">نام کاربر</label>
        <input id="name" type="text" class="form-control" name="name" value="<%=  old('name', user.name ) %>" required>
    </div>

    <div class="form-group">
        <label for="family" class="control-label">نام خوانوادگی کاربر</label>
        <input id="family" type="text" class="form-control" name="family" value="<%=  old('family', user.family ) %>" required>
    </div>

    <div class="form-group">
        <label for="address" class="control-label">آدرس کاربر</label>
        <input id="address" type="text" class="form-control" name="address" value="<%=  old('address', user.address ) %>" required>
    </div>

    <div class="form-group">
        <label for="telephone" class="control-label">تلفن تماس کاربر</label>
        <input id="telephone" type="text" class="form-control" name="telephone" value="<%=  old('telephone', user.telephone ) %>" required>
    </div>

    <div class="form-group">
        <label for="email" class="control-label">آدرس ایمیل</label>
        <input id="email" type="email" class="form-control" name="email" value="<%=  old('email', user.email ) %>" required="">
    </div>

    <div class="form-group">
        <label for="password" class="control-label">پسورد (در صورت اینکه نمیخواهید تغییر دهید خالی بگذارید.)</label>
        <input id="password" type="password" class="form-control" name="password" value="<%=  old('password') %>" required="">
    </div>

    <div class="form-group mt-5">
        <button type="submit" class="btn btn-block btn-info">ویرایش کاربر</button>
    </div>
</form>